<div class='form-container'>
  <% if !!flash[:error_messages] && flash[:error_messages].any? %>
    <div class='error_messages'>
      <ul>
        <% flash[:error_messages].each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with model: restaurant_pizza, local: true do |f| %>
    <div class='form_field'>
      <%= f.label :restaurant_id %>
      <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
    </div>

    <div class='form_field'>
      <%= f.label :pizza_id %>
      <%= f.collection_select :pizza_id, Pizza.all, :id, :name %>
    </div>

    <div class='form_field'>
      <%= f.label :price %>
      <%= f.number_field :price, { value: 10, min: 1, max: 30 } %>
    </div>

    <%= f.submit submit_text %>
  <% end %>
</div>
